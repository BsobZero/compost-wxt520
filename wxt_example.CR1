BeginProg
	Scan (SCAN_INT,Sec,0,0)
		PanelTemp (PTemp,250)
		Battery (Batt_volt)
		SDI12Recorder(WXT(1),WXT_COM,WXT_SDI,"R!",1,0)      'ask composite message
		CallTable (WXT_stats)
	NextScan
EndProg

