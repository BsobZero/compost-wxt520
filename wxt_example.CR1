Const WXT_COM = 1      'datalogger COM port
Const WXT_SDI = 0      'SDI address
Const SCAN_INT = 15    'seconds
Const STAT_INT = 30    'minutes

Public Ptemp
Public batt_volt

Public WXT(15)
Alias WXT(1)  = WDmin
Alias WXT(2)  = WDavg
Alias WXT(3)  = WDmax
Alias WXT(4)  = WSmin
Alias WXT(5)  = WSavg
Alias WXT(6)  = WSmax
Alias WXT(7)  = air_temp
Alias WXT(8)  = RH
Alias WXT(9)  = air_press
Alias WXT(10) = Ramt
Alias WXT(11) = Rdur
Alias WXT(12) = Rint
Alias WXT(13) = Hamt
Alias WXT(14) = Hdur
Alias WXT(15) = Hint

DataTable (WXT_stats,True,-1)
	DataInterval (0,STAT_INT,Min,10)
	Average(15,wxt(1),IEEE4,False)
	Minimum (1,batt_volt,FP2,0,False)
	Sample (1,PTemp,FP2)
EndTable

